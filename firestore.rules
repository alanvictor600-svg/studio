rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    function getRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuth() && getRole() == 'admin';
    }

    // Users can only read/update their own document, but anyone can create one. Admins can read all.
    match /users/{userId} {
      allow create;
      allow read, update, delete: if isOwner(userId) || isAdmin();
      // Only admins can list multiple users
      allow list: if isAdmin();
    }

    // Tickets can be created by any authenticated user.
    // They can only be read by their owner (buyer/seller) or an admin.
    match /tickets/{ticketId} {
      allow create: if isAuth();
      // Allow individual reads by owner or admin
      allow get: if isAuth() && (resource.data.buyerId == request.auth.uid || resource.data.sellerId == request.auth.uid || isAdmin());
      // Only admins can list multiple tickets. A user cannot query the entire collection.
      allow list: if isAdmin();
      allow update: if isAdmin(); // Only admins can change ticket status (e.g., to 'expired')
    }

    // Draws and global configs can be read by any authenticated user, but only modified by admins.
    match /{collection=draws,configs}/{docId} {
      allow read: if isAuth();
      allow write: if isAdmin();
    }

    // History can only be read by the specific seller it belongs to, or by an admin.
    // Only admins can create history entries (as it's a server-side process).
    match /sellerHistory/{historyId} {
      allow read: if isAuth() && (resource.data.sellerId == request.auth.uid || isAdmin());
      allow list: if isAdmin(); // Admins can list all history
      allow create: if isAdmin();
    }
    
    match /adminHistory/{historyId} {
      allow read, list: if isAdmin();
      allow create: if isAdmin();
    }
  }
}
