
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to draws collection
    match /draws/{drawId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Allow public read access to global configuration
    match /configs/global {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Users can read/update their own data. Admins can read/write any user data.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow list, delete: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Tickets can be created by authenticated users.
    // Reading is restricted to the buyer, seller, or an admin.
    match /tickets/{ticketId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && 
                     (request.resource.data.buyerId == request.auth.uid || 
                      request.resource.data.sellerId == request.auth.uid ||
                      request.auth.token.role == 'admin');
      allow update: if request.auth != null && request.auth.token.role == 'admin'; // Only admin can update ticket status after creation
    }

    // History collections are read-only for their respective users/admins.
    match /sellerHistory/{historyId} {
        allow read: if request.auth != null && 
                     (request.resource.data.sellerId == request.auth.uid || 
                      request.auth.token.role == 'admin');
        allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    match /adminHistory/{historyId} {
        allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
