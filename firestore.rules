rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default: Deny all reads and writes unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }

    // Configs: Anyone can read, only admins can write.
    match /configs/global {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Users: Users can read/update their own data. Admins can read/write any user.
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create, delete: if isAdmin(); // Only admins can create or delete user accounts directly
    }
    
    // Tickets: Users can only read tickets they bought or sold. Admins can read any. No one can edit/delete after creation.
    match /tickets/{ticketId} {
      allow read: if request.auth != null && (
                    (resource.data.buyerId != null && isOwner(resource.data.buyerId)) ||
                    (resource.data.sellerId != null && isOwner(resource.data.sellerId)) ||
                    isAdmin()
                  );
      allow create: if request.auth != null; // Creation will be handled by secure backend function, but rule allows the attempt
      allow update, delete: if false;
    }

    // Draws: Anyone can read. Only admins can create/delete.
    match /draws/{drawId} {
        allow read: if request.auth != null;
        allow create, delete, update: if isAdmin();
    }

    // Seller & Admin History: Only relevant user or admin can read. No one can write directly.
    match /sellerHistory/{historyId} {
        allow read: if isOwner(resource.data.sellerId) || isAdmin();
        allow create, update, delete: if false; // Should be written by backend function
    }

    match /adminHistory/{historyId} {
        allow read: if isAdmin();
        allow create, update, delete: if false; // Should be written by backend function
    }
  }
}
